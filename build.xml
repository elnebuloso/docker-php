<?xml version="1.0" encoding="UTF-8"?>

<project name="application" basedir="." default="commons:help">


    <property file="build.properties"/>
    <property file="build.properties.local"/>


    <import file="/srv/phing/commons/standard.xml"/>


    <target name="build:ubuntu">
        <phingcall target="build:ubuntu:version">
            <property name="php.version" value="7.1"/>
            <property name="php.type" value="apache"/>
            <property name="php.os" value="ubuntu"/>
        </phingcall>
    </target>


    <target name="build:ubuntu:version">
        <exec command="docker build --pull --tag ${project.name}-${php.version}-${php.os} --build-arg PHP_VERSION=${php.version} --file ${php.type}/Dockerfile ." passthru="true" checkreturn="true" level="info" dir="${project.root}/release/${php.os}"/>
    </target>


</project>
